{
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "devapp-build",
    "**/*.stories.jsx",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.ts",
    "**/*.spec.jsx",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/cjs/",
    "module": "commonjs",
    "baseUrl": "src",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "rootDirs": ["./src"],
    "paths": {
      "Atoms/*": ["./atoms/*"],
      "Components/*": ["./components/*"],
      "Core/*": ["./core/*"],
      "Hooks/*": ["./hooks/*"],
      "Services/*": ["./services/*"],
      "Stories/*": ["./stories/*"],
      "Themes/*": ["./themes/*"],
      "Styles/*": ["./styles/*"],
      "Utils/*": ["./utils/*"]
    }
  }
}
